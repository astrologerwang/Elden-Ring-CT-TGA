// Camera rotates around the player character when enabled

{$lua}
if syntaxcheck then return end

function writePointer()
    local areaP = readPointer("FieldArea")
    local p1 = readPointer(areaP + 0x20)
    local p2 = readPointer(p1 + 0xD0) + 0x30
    return p2
end

[ENABLE]

local p = writePointer()

f = io.open("D:\\temp\\hookx_addresses.txt","w");
f:write(string.format("g_cameraForward=%X", p));
f:close();

[DISABLE]
